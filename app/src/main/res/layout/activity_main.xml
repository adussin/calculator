<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="379dp"
        android:layout_height="132dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:gravity="end|center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="533dp"
        android:ems="10"
        android:inputType="number"
        android:onClick="setSelectedEditTextID"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="@+string/edit_text_suggestion" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="533dp"
        android:ems="10"
        android:inputType="number"
        android:onClick="setSelectedEditTextID"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="@+string/edit_text_suggestion" />

    <TextView
        android:id="@+id/textView_operation"
        android:layout_width="66dp"
        android:layout_height="33dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="533dp"
        android:gravity="center|center"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="462dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="+"
            android:textSize="24sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textSize="24sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="/"
            android:textSize="24sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="*"
            android:textSize="24sp"
            android:typeface="monospace" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout_numpad"
        android:layout_width="271dp"
        android:layout_height="501dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>